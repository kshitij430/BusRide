extends base
block content
    - console.log("OUR BUSES",buses)
    section#filter-content
        .background-color-container
            .filter
                .tour-result
                    h4 Pune
                    span
                        i.fa.fa-light.fa-arrow-right
                    h4 Nagpur
                    h4 21 June | Tuesday
                h4#filter-head
                    span
                        i.fa.fa-solid.fa-filter  
                        | FILTERS
                    span#border
                h4 BUS TYPES
                .bus-type.filter-tile.filter-tile-flex
                    input#seater(type='checkbox' name='seater')
                    label(for='seater')  SEATER 
                    input#sleeper(type='checkbox' name='sleeper')
                    label(for='sleeper')  SLEEPER
                    input#AC(type='checkbox' name='AC')
                    label(for='AC')  AC
                    input#NONAC(type='checkbox' name='NONAC')
                    label(for='NONAC')  NONAC
                h4 DEPARTURE TIME
                .departure-time.filter-tile.filter-tile-flex
                    input#departure-before6(type='checkbox' name='departure-before6')
                    label(for='departure-before6')  Before 6 am
                    input#departure-6to12(type='checkbox' name='departure-6to12')
                    label(for='departure-6to12')  6 am to 12 pm
                    input#departure-12to6(type='checkbox' name='departure-12to6')
                    label(for='departure-12to6')  12 pm to 6 pm
                    input#departure-after6(type='checkbox' name='departure-after6')
                    label(for='departure-after6')  After 6 pm
                h4 ARRIVAL TIME
                .arrival-time.filter-tile.filter-tile-flex
                    input#arrival-before6(type='checkbox' name='arrival-before6')
                    label(for='arrival-before6')  Before 6 am
                    input#arrival-6to12(type='checkbox' name='arrival-6to12')
                    label(for='arrival-6to12')  6 am to 12 pm
                    input#arrival-12to6(type='checkbox' name='arrival-12to6')
                    label(for='arrival-12to6')  12 pm to 6 pm
                    input#arrival-after6(type='checkbox' name='arrival-after6')
                    label(for='arrival-after6')  After 6 pm
                h4
                    label(for='boarding-point') BOARDING POINT
                .boarding-point.filter-tile
                    input#boarding-point(type='text' name='boarding-point' placeholder='BOARDING POINT')
                h4
                    label(for='dropping-point') DROPPING POINT
                .dropping-point.filter-tile
                    input#dropping-point(type='text' name='dropping-point' placeholder='DROPPING POINT')
                h4 AMENITIES
                .amenities.filter-tile
                    .amenities-tile
                    i.fa.fa-solid.fa-wifi
                    |  Wifi
                    .amenities-tile
                    i.fa.fa-solid.fa-charging-station
                    |  Charging Point
                    .amenities-tile
                    i.fa.fa-solid.fa-video
                    |  Movie
                    .amenities-tile
                    i.fa.fa-solid.fa-bed
                    |  Blankets
                    .amenities-tile
                    i.fa.fa-solid.fa-restroom
                    |  Toilet
                .filter-tile.booking-tile.hidden
                    form(action='')
                    .seat-details
                        .seat-selection
                            .seat-booking-details
                                #booking.booking-header(style='background-color: green; color: #fff;')
                                    h3(style='font-weight: lighter;') Seat Details
                                    h3(style='font-weight: lighter;') Price
                                .booking-content
                                #booking
                                    h4 SubTotal
                                    h4#booking-price
                    button#submit(type='submit' style='background-color: green;') Buy Tickets
            
            #tour-content
                .head-tile
